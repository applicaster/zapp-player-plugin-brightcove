<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="BrightcoveFullScreen"/>

  <style name="BrightcoveFullScreen.Theme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@android:color/black</item>
  </style>

  <style name="ErrorDialogButton" parent="android:Widget.Button">
    <item name="android:layout_width">@dimen/btn_back_refresh_width</item>
    <item name="android:layout_height">@dimen/btn_back_refresh_height</item>
    <item name="android:background">@drawable/oval_button_background</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:textSize">@dimen/btn_back_refresh_text_size</item>
    <item name="android:gravity">center_horizontal|top</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="BackButton" parent="ErrorDialogButton">
    <item name="android:paddingStart">@dimen/btn_back_padding_start</item>
    <item name="android:paddingEnd">@dimen/btn_back_padding_end</item>
  </style>

  <style name="RefreshButton" parent="ErrorDialogButton">
    <item name="android:paddingStart">@dimen/btn_refresh_padding_start</item>
    <item name="android:paddingEnd">@dimen/btn_refresh_padding_end</item>
  </style>

  <style name="ImgBtnClose" parent="android:Widget.ImageButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentTop">true</item>
    <item name="android:layout_alignParentEnd">true</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:layout_marginTop">@dimen/img_btn_close_margin_top</item>
    <item name="android:layout_marginEnd">@dimen/img_btn_close_margin_end</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:padding">@dimen/img_btn_close_padding</item>
    <item name="android:scaleType">center</item>
  </style>

  <style name="ImgConnectivity">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">@dimen/img_connectivity_margin_bottom</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:padding">@dimen/img_connectivity_padding</item>
    <item name="android:scaleType">center</item>
  </style>

  <style name="TextDescriptionNormal" parent="android:Widget.TextView">
    <item name="android:layout_width">@dimen/tv_description_normal_width</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">@dimen/tv_description_normal_margin_bottom</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">15sp</item>
  </style>

</resources>
